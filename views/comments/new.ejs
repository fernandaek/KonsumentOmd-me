<%- include("../partials/header") %>


<div class="container">
    <h1 class="text-center">Add a new comment to <%= review.name %></h1>
    <div class="row">
        
        <div style="width: 30%; margin: 30px auto;">
            <form action="/reviews/<%= review._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Type your comment" />
                </div>
                <!-- <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="Author" />
                </div> -->
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/reviews">Go back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>

