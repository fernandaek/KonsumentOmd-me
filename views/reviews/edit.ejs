<%- include("../partials/header") %>


<div class="container">
    <h1 class="text-center">Edit your review on <%= review.name %></h1>
    <div class="row">
        
        <div style="width: 30%; margin: 30px auto;">
            <form action="/reviews/<%= review._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="review[name]" value="<%= review.name %>" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="review[price]" value="<%= review.price %>" min="0.01" step="0.01" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="review[image]" value="<%= review.image %>" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="review[description]" value="<%= review.description %>" />
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update</button>
                </div>
            </form>
            <a href="/reviews">Go back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
